<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/drtorrent?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">password</property>
    <mapping resource="hu/bute/daai/amorg/drtorrent/analytics/entity/Torrent.hbm.xml"/>
    <mapping resource="hu/bute/daai/amorg/drtorrent/analytics/entity/Process.hbm.xml"/>
    <mapping resource="hu/bute/daai/amorg/drtorrent/analytics/entity/Peer.hbm.xml"/>
    <mapping resource="hu/bute/daai/amorg/drtorrent/analytics/entity/Powerinfo.hbm.xml"/>
    <mapping resource="hu/bute/daai/amorg/drtorrent/analytics/entity/Networkinfo.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
