<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="vertical" >
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/amorg_logo" />
	    
	    <TextView android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:gravity="center_horizontal"
	        android:text="@string/about_text"/>
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:autoLink="web"
	        android:text="http://amorg.aut.bme.hu" />
	
	    <TextView android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textStyle="bold"
	        android:text="@string/developers" />
	    
	    <TextView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
	        android:textStyle="bold"
	        android:text="@string/bori_andras" />
	    
	    <TextView android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
	        android:textStyle="italic"
	        android:text="@string/ekler_peter" />
	    
	    <TextView android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
	        android:textStyle="italic"
	        android:text="@string/erdody_nagy_zsombor" />
	    
	    <TextView
	        android:id="@+id/dialog_about_tvFeedback"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal" />
	    
	</LinearLayout>
</ScrollView>